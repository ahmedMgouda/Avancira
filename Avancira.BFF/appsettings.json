{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "DatabaseOptions": {
    "Provider": "postgresql",
    "ConnectionString": "Host={Avancira__Database__Host};Port={Avancira__Database__Port};Database={Avancira__Database__Name};Username={Avancira__Database__User};Password={Avancira__Database__Password}"
  },
  "Auth": {
    "Authority": "https://localhost:9100",
    "ClientId": "bff-client",
    "ClientSecret": "dev-bff-secret",
    "RequireHttpsMetadata": true,
    "SaveTokens": true,
    "Scopes": [
      "openid",
      "profile",
      "email",
      "offline_access"
    ]
  },

  "CorsOptions": {
    "AllowedOrigins": [ "http://localhost:4200", "https://localhost:4200" ]
  },

  "Cookie": {
    "Name": ".Avancira.BFF",
    "SameSite": "None",
    "SecurePolicy": "Always",
    "ExpireTimeSpan": "08:00:00",
    "SlidingExpiration": true
  },
  "TokenManagement": {
    "RefreshBeforeExpiration": "00:05:00",
    "EnableAutomaticRefresh": true
  },
  "ReverseProxy": {
    "Routes": {
      "bff-api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/bff/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/bff" }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "primary": {
            "Address": "https://localhost:9000"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  }

}
