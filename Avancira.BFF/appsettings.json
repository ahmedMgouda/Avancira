{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Auth": {
    "Authority": "https://localhost:5001",
    "ClientId": "bff-client",
    "ClientSecret": "bff-secret-change-in-production",
    "RequireHttpsMetadata": true,
    "SaveTokens": true,
    "Scopes": [
      "openid",
      "profile",
      "email",
      "offline_access"
    ]
  },
  "Cors": {
    "AllowedOrigins": "http://localhost:4200;https://localhost:4200"
  },
  "Cookie": {
    "Name": ".Avancira.BFF",
    "SameSite": "Strict",
    "SecurePolicy": "Always",
    "ExpireTimeSpan": "08:00:00",
    "SlidingExpiration": true
  },
  "TokenManagement": {
    "RefreshBeforeExpiration": "00:05:00",
    "EnableAutomaticRefresh": true
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "primary": {
            "Address": "https://localhost:5003"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  }
}
