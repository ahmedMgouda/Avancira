{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.IdentityModel": "Information",
      "System.Net.Http": "Information"
    }
  },
  "DatabaseOptions": {
    "Provider": "postgresql",
    "ConnectionString": "Host={Avancira__Database__Host};Port={Avancira__Database__Port};Database={Avancira__Database__Name};Username={Avancira__Database__User};Password={Avancira__Database__Password}"
  },
  "OriginOptions": {
    "OriginUrl": "https://www.avancira.com"
  },
  "App": {
    "FrontendUrl": "https://www.avancira.com",
    "IdpUrl": "https://www.avancira.com"
  },
  "Auth": {
    "Issuer": "{Avancira__Auth__Issuer}",
    "OpenIddict": {
      "AccessTokenLifetime": "00:15:00",
      "RefreshTokenLifetime": "7.00:00:00",
      "AuthorizationCodeLifetime": "00:10:00"
    }
  },
  "CacheOptions": {
    "Redis": ""
  },
  "HangfireOptions": {
    "Enabled": true,
    "EnableServer": true,
    "EnableDashboard": true,
    "StorageProvider": "POSTGRESQL",
    "Queues": [
      "default",
      "email"
    ],
    "WorkerCount": 5,
    "HeartbeatIntervalSeconds": 30,
    "SchedulePollingIntervalSeconds": 30,
    "Username": "admin",
    "Password": "Secure1234!Me",
    "Route": "/jobs"
  },
  "MailOptions": {
    "From": "mukesh@fullstackhero.net",
    "Host": "smtp.ethereal.email",
    "Port": 587,
    "UserName": "ruth.ruecker@ethereal.email",
    "Password": "wygzuX6kpcK6AfDJcd",
    "DisplayName": "Mukesh Murugan"
  },
  "EnhancedEmailOptions": {
    "FromEmail": "{Avancira__Notifications__Email__FromEmail}",
    "FromName": "{Avancira__Notifications__Email__FromName}"
  },
  "GraphApiOptions": {
    "ClientId": "{Avancira__Notifications__GraphApi__ClientId}",
    "ClientSecret": "{Avancira__Notifications__GraphApi__ClientSecret}",
    "TenantId": "{Avancira__Notifications__GraphApi__TenantId}"
  },
  "SendGridOptions": {
    "ApiKey": "{Avancira__Notifications__Sendgrid__ApiKey}"
  },
  "CorsOptions": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200",
      "http://localhost:8000",
      "https://localhost:8000",
      "http://localhost:8080",
      "https://localhost:8080",
      "http://localhost:9000",
      "https://localhost:9000",
      "http://97.74.95.95:80",
      "http://97.74.95.95:8000",
      "https://avancira.com",
      "https://www.avancira.com",
      "https://localhost:7100",
      "http://localhost:7100",
      "http://localhost:5010",
      "http://10.5.0.2:4200",
      "https://10.5.0.2:4200"
    ]
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "RateLimitOptions": {
    "EnableRateLimiting": false,
    "PermitLimit": 5,
    "WindowInSeconds": 10,
    "RejectionStatusCode": 429
  },
  "SecurityHeaderOptions": {
    "Enable": true,
    "Headers": {
      "XContentTypeOptions": "nosniff",
      "ReferrerPolicy": "no-referrer",
      "XXSSProtection": "1; mode=block",
      "XFrameOptions": "DENY",
      "ContentSecurityPolicy": "block-all-mixed-content; style-src 'self' 'unsafe-inline'; font-src 'self'; form-action 'self'; frame-ancestors 'self'; img-src 'self' data:; script-src 'self' 'unsafe-inline'",
      "PermissionsPolicy": "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()",
      "StrictTransportSecurity": "max-age=31536000"
    }
  },
  "Avancira": {
    "ExternalServices": {
      "Google": {
        "ClientId": "{Avancira__ExternalServices__Google__ClientId}",
        "ClientSecret": "{Avancira__ExternalServices__Google__ClientSecret}"
      },
      "Facebook": {
        "AppId": "{Avancira__ExternalServices__Facebook__AppId}",
        "AppSecret": "{Avancira__ExternalServices__Facebook__AppSecret}"
      }
    }
  },
  "HealthCheck": {
    "Database": {
      "Enabled": true
    },
    "Redis": {
      "Enabled": false,
      "FailureStatus": "Degraded"
    },
    "Memory": {
      "Enabled": true,
      "ThresholdMb": 512
    },
    "Downstream": {
      "AuthServer": {
        "Enabled": true,
        "Url": "{Avancira__Auth__Issuer}",
        "HealthPath": "health/ready",
        "Timeout": 5,
        "FailureStatus": "Degraded"
      }
    }
  }
}
