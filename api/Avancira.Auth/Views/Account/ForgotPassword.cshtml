@model ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center mb-3">Forgot your password?</h2>
<p class="text-center text-muted mb-4">Enter your email address and we'll send you a link to reset it.</p>

<form asp-action="ForgotPassword" method="post" novalidate class="needs-validation">
    @Html.AntiForgeryToken()

    @* Display validation errors *@
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    @* Email input field *@
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email"
               type="email"
               class="form-control"
               placeholder="your@email.com"
               autocomplete="email"
               autofocus />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @* Cooldown message (shown when user needs to wait) *@
    <div id="cooldown-message" class="alert alert-info d-none" role="alert">
        <i class="bi bi-clock-fill me-2"></i>
        Please wait <strong><span id="cooldown-timer">@Model.RemainingCooldown</span></strong> seconds before requesting another reset.
    </div>

    @* Submit button (disabled during cooldown) *@
    <button id="submitBtn"
            type="submit"
            class="btn btn-primary w-100"
            @(Model.RemainingCooldown > 0 ? "disabled" : "")>
        Send password reset link
    </button>
</form>

<p class="text-center mt-4 mb-0">
    <a asp-action="Login" class="link-secondary">Back to login</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Cooldown timer functionality
        (function () {
            const cooldown = @Model.RemainingCooldown;
            const message = document.getElementById('cooldown-message');
            const timer = document.getElementById('cooldown-timer');
            const btn = document.getElementById('submitBtn');

            // Validate elements exist
            if (!message || !timer || !btn) {
                console.warn('Cooldown elements not found');
                return;
            }

            // If cooldown is active, start countdown
            if (cooldown > 0) {
                message.classList.remove('d-none');
                btn.disabled = true;

                let remaining = cooldown;

                // Update timer every second
                const interval = setInterval(function () {
                    remaining--;
                    timer.textContent = remaining;

                    // When countdown completes, enable button
                    if (remaining <= 0) {
                        clearInterval(interval);
                        message.classList.add('d-none');
                        btn.disabled = false;
                    }
                }, 1000);
            }
        })();
    </script>
}