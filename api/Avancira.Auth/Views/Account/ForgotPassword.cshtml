@model ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center mb-3">Forgot your password?</h2>
<p class="text-center text-muted mb-4">Enter your email address and we'll send you a link to reset it.</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success" role="alert">
        <i class="bi bi-check-circle-fill me-1"></i>@Model.Message
    </div>
}

<form asp-action="ForgotPassword" method="post" novalidate class="needs-validation">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" type="email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div id="cooldown-message" class="alert alert-info d-none" role="alert">
        Please wait <span id="cooldown-timer">@Model.RemainingCooldown</span> seconds before requesting another reset.
    </div>
    <button id="submitBtn" type="submit" class="btn btn-primary w-100" @(Model.RemainingCooldown > 0 ? "disabled" : "")>
        Send password reset link
    </button>
</form>

<p class="text-center mt-4 mb-0">
    <a asp-action="Login" class="link-secondary">Back to login</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const cooldown = @Model.RemainingCooldown;
            const message = document.getElementById('cooldown-message');
            const timer = document.getElementById('cooldown-timer');
            const btn = document.getElementById('submitBtn');

            if (!message || !timer || !btn) {
                return;
            }

            if (cooldown > 0) {
                message.classList.remove('d-none');
                btn.disabled = true;
                let remaining = cooldown;
                const interval = setInterval(function () {
                    remaining--;
                    timer.textContent = remaining;
                    if (remaining <= 0) {
                        clearInterval(interval);
                        message.classList.add('d-none');
                        btn.disabled = false;
                    }
                }, 1000);
            }
        })();
    </script>
}
