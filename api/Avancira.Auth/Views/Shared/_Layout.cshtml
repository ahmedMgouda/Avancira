@{
    var appTitle = ViewData["Title"] ?? "Avancira Auth";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@appTitle</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap Icons (optional but recommended) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }
        .auth-container {
            max-width: 420px;
            margin: 60px auto;
            background: #fff;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- ✅ Simple Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Avancira</a>
        </div>
    </nav>

    <!-- Alert messages -->
    <main class="container mt-4">
        @if (TempData["SuccessMessage"] is string success)
        {
            @await Component.InvokeAsync("AlertMessage", new { Type = "success", Message = success })
        }

        @if (TempData["ErrorMessage"] is string error)
        {
            @await Component.InvokeAsync("AlertMessage", new { Type = "error", Message = error })
        }

        <!-- Main content -->
        <div class="auth-container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-center text-muted my-4">
        <small>&copy; @(DateTime.UtcNow.Year) Avancira Systems. All rights reserved.</small>
    </footer>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
